<div class="text-center m-5 text-danger">

  <h1><i class="fas fa-plus-circle"></i> Add a New Cocktail</h1>

</div>

<%= simple_form_for(@cocktail) do |f| %>
<%= f.input :name %>
<%= f.input :description %>
<%= f.input :image %>
<%= f.input :image_cache, as: :hidden %>
<%= f.submit class: "btn btn-primary"%>
<% end %>
