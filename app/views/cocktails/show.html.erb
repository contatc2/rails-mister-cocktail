<div class="card m-5">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @cocktail.image %>)">
  <%=@cocktail.name  %>
</div>

  <div class="d-flex justify-content-around p-3">
    <div>
      <h2>Description</h2>

      <p><%= @cocktail.description %></p>

    </div>
    <div>
      <h2>Composition</h2>
      <ul>
        <% @doses.each do |dose| %>
         <li><strong><%= dose.ingredient.name %></strong> - <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'}  do %>
           <i class="fas fa-trash-alt"></i>
          <% end %>
         </li>

        <% end %>
      </ul>
    </div>
  </div>

  <div class="mt-5 py-3 px-5 text-center">
    <h2>Add ingredient</h2>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.submit 'add ingredient', class: "btn btn-primary"%>
    <% end %>
  </div>

</div>
