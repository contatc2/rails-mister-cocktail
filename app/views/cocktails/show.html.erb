<div class="card m-5" style="height: 500px;">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/1265910/pexels-photo-1265910.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500)">
  <%=@cocktail.name  %>
</div>

  <div class="d-flex justify-content-around py-3">
    <div>
      <h2>Composition</h2>
      <ul>
        <% @doses.each do |dose| %>
         <li><strong><%= dose.ingredient.name %></strong> - <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'}  do %>
           <i class="fas fa-trash-alt"></i>
          <% end %>
         </li>

        <% end %>
      </ul>
    </div>

    <div>
      <h2>Add ingredient</h2>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit 'add ingredient', class: "btn btn-primary"%>
      <% end %>
    </div>

  </div>


</div>
