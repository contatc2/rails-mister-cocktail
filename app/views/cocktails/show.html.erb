<div class="card m-3">
  <div class="card-category cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.image, height: 300, width: 400, crop: :fill %>')">
  <%=@cocktail.name  %>
</div>
<div class="p-3 border-bottom">
  <h2>Description</h2>

  <p><%= @cocktail.description %></p>

  <%= link_to 'back to cocktails', cocktails_path, class:"btn btn-light" %>
</div>

  <div class="d-flex justify-content-around flex-wrap p-3">
    <div>
      <h2>Composition</h2>
      <ul>
        <% @doses.each do |dose| %>
         <li><strong><%= dose.ingredient.name %></strong> - <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'}  do %>
           <i class="fas fa-trash-alt"></i>
          <% end %>
         </li>

        <% end %>
      </ul>
    </div>
    <div class="p-1 text-center">
      <h2>Add ingredient</h2>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit 'add ingredient', class: "btn btn-light"%>
      <% end %>
    </div>
  </div>


</div>

